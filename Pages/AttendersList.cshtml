@page
@model GetTogether.Pages.AttendersListModel
@{
}

<h2 class="text-center  mb-2 mt-5">
    List of People Attending
</h2>
<div class="border rounded card-body">
    <table class="table table-hover ">
        <thead class="table-dark">
            <tr>
                <th scope="col">S/N</th>
                <th scope="col">Full Name</th>
                <th scope="col">Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attenders in Model.AttendersList)
            {
                <tr>
                    <td>@attenders.PersonId</td>
                    <td>@attenders.FullName</td>
                    <td>@attenders.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table> <br />
    <a class="btn btn-primary" asp-page="/Index">Go Back</a>
